---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mt-16 xl:mt-24 px-8 md:px-12 flex flex-col gap-16 xl:flex-row xl:items-center">
			<div class="flex flex-col items-start text-left xl:order-1">
				<h6 class="font-fira leading-none mb-0 p-0 text-gray-300">Hello World, I am</h5>
				<h1 class="font-fira leading-none mt-0 p-0">Rodrigo Arismendi</h1>
				<h5 class="font-fira leading-none mb-0 p-0 text-green-600">Backend developer</h5>
			</div>
			<img width={510} height={205} src="/coding_me.svg" alt="" class="mx-auto xl:w-full xl:order-2"/>
		</main>
		<Footer />
	</body>
</html>
